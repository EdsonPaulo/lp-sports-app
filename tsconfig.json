{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true
  },
  "allowJs": true,
  "allowSyntheticDefaultImports": true,
  "esModuleInterop": true,
  "isolatedModules": true,
  "jsx": "react",
  "lib": ["es6"],
  "moduleResolution": "node",
  "noEmit": true,
  "strict": true,
  "target": "esnext",
  "noImplicitAny": true,
  "resolveJsonModule": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "typeRoots": ["node_modules/@types", "src/typescript/types"],
  "types": ["jest", "styled-components-react-native"],
  "exclude": [],
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"]
}
